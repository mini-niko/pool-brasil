    "date-fns": "^3.6.0",
    "dotenv": "16.4.7",
    "dotenv-expand": "12.0.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.10.0",
    "husky": "9.1.7",
    "joi": "^17.13.3",
    "lucide-react": "^0.487.0",
    "next": "15.1.4",
    "next-connect": "^1.0.0",
