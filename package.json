    "autoprefixer": "^10.4.20",
    "commitizen": "4.3.1",
    "concurrently": "9.1.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "9.18.0",
    "eslint-config-next": "15.1.4",
